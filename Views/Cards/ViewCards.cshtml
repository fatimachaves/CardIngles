@model IEnumerable<CardIngles.Models.Card>

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <style>
        .card-container {
            perspective: 1000px;
            width: 500px;
            height: 300px;
            position: relative;
            margin: 50px auto;
        }

        .card {
            width: 100%;
            height: 100%;
            transform-style: preserve-3d;
            transition: transform 0.5s;
        }

            .card.flipped {
                transform: rotateY(180deg);
            }

        .card-face {
            position: absolute;
            width: 100%;
            height: 100%;
            backface-visibility: hidden;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 18px;
            font-family: Arial, sans-serif;
            color: #333;
            border: 1px solid #ccc;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            cursor: pointer;
        }

        .card-back {
            transform: rotateY(180deg);
        }
    </style>
</head>
<body>
    <div>
    @foreach (var item in Model.ToList())
    {
        <div class="card-container">
            <div class="card" onclick="flipCard(this)">
                <div class="card-face">
                    <div class="card-front">
                        <p>@item.Frase</p>
                    </div>
                </div>
                <div class="card-face card-back">
                    <div class="card-back-content">
                        <p>@item.Traducao</p>
                    </div>
                </div>
            </div>
                <a style="float:right;" href="Cards/Edit?id=@item.Id">Editar Card</a>
                <a style="float:right; margin-right:5%" href="Cards/Delete?id=@item.Id">Deletar Card</a>
        </div>
        
    }
    </div>
    <button style="float:right;" onclick="mostrarProximo()">Próximo</button>
    
    <script>
        var indiceAtual = 0;
        var cards = document.querySelectorAll('.card-container');

        for (var i = 1; i < cards.length; i++) {
            cards[i].style.display = 'none';
        }

        function mostrarProximo() {
            if (indiceAtual < cards.length - 1) {
                cards[indiceAtual].style.display = 'none';
                indiceAtual++;
                cards[indiceAtual].style.display = 'block';
            }
        }

        function flipCard(card) {
            card.classList.toggle('flipped');
        }

    </script>

</body>
</html>
